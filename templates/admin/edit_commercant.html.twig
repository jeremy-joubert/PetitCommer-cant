{% extends 'admin.base.html.twig' %}
{% form_theme formCommercant 'bootstrap_4_layout.html.twig' %}
{% form_theme formImage 'bootstrap_4_layout.html.twig' %}

{% block body %}
    <div>
        <h1>Editer le commer√ßants</h1>
        {{ form_start(formCommercant) }}
        {{ form_widget(formCommercant) }}
        <button type="submit" class="btn btn-success">Sauvgarder</button>
        {{ form_end(formCommercant) }}
        </div>
    <div>
        <h1>Images de la boutique</h1>
        <div class="d-flex">
            {% for image in commercant.getImages() %}
                <div class="image_hover">
                    <a href="{{ path('admin_image_commercant_delete',{id:image.getId()}) }}" class="btn btn-danger btn-sm"
                       style="display: none;">Supprimer</a>
                    <img src="/img/{{ image.getLien() }}" class="rounded" alt="image_boutiqque"
                         style="padding: 0.5rem; max-width: 150px;">
                </div>
            {% endfor %}
        </div>
        {{ form_start(formImage) }}
        {{ form_widget(formImage) }}
        <button type="submit" class="btn btn-success">Sauvgarder</button>
        {{ form_end(formImage) }}
    </div>
{% endblock %}

{% block javascripts %}
    <script src="/js/hoverImageButtonDelete.js"></script>
{% endblock %}